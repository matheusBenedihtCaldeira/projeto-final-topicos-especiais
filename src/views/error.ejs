  <style>
    .theme-text {
      color: #075985;
    }

    .card-img-top {
      height: 200px;
      width: 100%;
    }
    .card {
      z-index: 1;
      overflow: hidden;
      transition: 0.5s;
    }
    .card:hover {
      color: white;
    }
    .card::before {
      content: "";
      position: absolute;
      left: -100%;
      top: 0%;
      background: #075985;
      width: 100%;
      height: 100%;
      transition: 0.5s;
      z-index: -1;
    }
    .card:hover::before {
      left: 0%;
      color: white;
    }
    .container-fluid {
      background-image: url("blob-scene-haikei.svg");
      background-position: center;
      background-size: cover;
    }
  </style>
</head>
